{
  "name": "@charity/backend",
  "version": "1.0.0",
  "description": "Blockchain-based charity donation platform backend",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec \"ts-node --transpile-only\" src/server.ts",
    "dev-complete": "nodemon --exec \"ts-node --transpile-only\" src/server-complete.ts",
    "dev-enhanced": "nodemon --exec \"ts-node --transpile-only\" src/server-enhanced.ts",
    "build": "tsc --noEmit false",
    "start": "node dist/server.js",
    "start-complete": "node dist/server-complete.js",
    "start-enhanced": "node dist/server-enhanced.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "migrate": "npx prisma migrate dev",
    "generate": "npx prisma generate",
    "db:seed": "npx tsx src/scripts/seed.ts",
    "db:seed:build": "npm run build && node dist/scripts/seed.js"
  },
  "dependencies": {
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/web-push": "^3.6.4",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-slow-down": "^2.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "ipfs-http-client": "^60.0.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "qrcode": "^1.5.4",
    "razorpay": "^2.9.6",
    "redis": "^5.5.6",
    "sharp": "^0.33.1",
    "socket.io": "^4.7.4",
    "speakeasy": "^2.0.0",
    "web-push": "^3.6.7",
    "web3": "^4.3.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
